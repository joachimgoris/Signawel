<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Signawel.Mobile.Views.RegisterView"
             Visual="Material"
             Title="Registreren">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="E-mail" Text="{Binding Email}" Margin="10" />
            <Entry Placeholder="Wachtwoord" IsPassword="True" Text="{Binding Password}" Margin="10" />
            <Entry Placeholder="Herhaal wachtwoord" IsPassword="True" Text="{Binding PasswordRepeat}" Margin="10" />
            <Button Command="{Binding ButtonTappedCommand}" Text="Registreren" Margin="10" BackgroundColor="Accent" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>