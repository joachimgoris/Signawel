<?xml version="1.0" encoding="UTF-8"?>
<abstract:ValidationFormEntry xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:abstract="clr-namespace:Signawel.Mobile.Validation.Controls.Abstract"
             mc:Ignorable="d"
             x:Class="Signawel.Mobile.Validation.Controls.ValidationSearchBar">
  <ContentView.Content>
      <StackLayout Orientation="Vertical">
          <StackLayout Orientation="Horizontal">
              <Entry x:Name="SearchBarEntry"
                     BackgroundColor="Transparent"
                     HorizontalOptions="FillAndExpand"
                     IsEnabled="False"/>
              <ImageButton x:Name="ValidationSearchButton"
                           HeightRequest="40"
                           WidthRequest="50"
                           BackgroundColor="Transparent"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Opacity="0.5"/>
          </StackLayout>
          <Label x:Name="ValidationSearchBarLabel"
                 IsVisible="False"/>
      </StackLayout>
  </ContentView.Content>
</abstract:ValidationFormEntry>